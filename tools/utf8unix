#! /usr/bin/env nix-shell
#! nix-shell --pure -i fish -p fish findutils nkf

for path in $argv
  if [ -f $path ]
    echo -n "Converting encode of $path to utf-8-unix ..." 1>&2
    nkf -w -Lu --overwrite $path
    echo "done" 1>&2
  else
    echo "Skipped $path" 1>&2
  end
end

# vim: ft=fish sw=2 sts=2 et
